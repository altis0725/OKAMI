# API Keys
MONICA_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_BASE=https://openapi.monica.im/v1

# Mem0設定（オプション - エラーが出ても動作継続）
# Mem0 APIキー（省略可能 - 省略時は基本メモリを使用）
MEM0_API_KEY=m0-xxxxxxxxxxxxxxxxxxxxxxxx

# ローカルMem0モード（Ollamaを使用する場合）
USE_LOCAL_MEM0=false

# メモリフォールバック設定
MEMORY_FALLBACK_TO_BASIC=true  # Mem0エラー時に基本メモリを使用
MEMORY_ERROR_TOLERANCE=high    # エラー許容レベル（high/medium/low）

# Graph Memory settings (optional)
ENABLE_GRAPH_MEMORY=true
GRAPH_MEMORY_STORAGE_PATH=./storage/graph_memory

# Logging
OKAMI_LOG_LEVEL=INFO

# Storage paths (optional, defaults to ./storage)
CREWAI_STORAGE_DIR=./storage

# Claude Code Monitor webhook (optional)
CLAUDE_MONITOR_WEBHOOK_URL=

# Vector store settings
VECTOR_STORE_TYPE=qdrant
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# Prometheus settings
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090