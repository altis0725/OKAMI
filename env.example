# OKAMI Configuration Example
# Copy this file to .env and update with your actual values

# Monica API Configuration
MONICA_API_KEY=your_monica_api_key_here

# Claude Code Monitor Configuration  
CLAUDE_API_KEY=your_claude_api_key_here

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Storage Configuration
CREWAI_STORAGE_DIR=/app/storage

# Memory Configuration
MEMORY_CONFIG_PROVIDER=basic

# Quality Monitoring
QUALITY_CHECK_INTERVAL=30
MIN_QUALITY_SCORE=7.0

# Performance Thresholds
MAX_RESPONSE_TIME=10.0
MAX_RETRIES=3

# Docker MCP Gateway Configuration
MCP_GATEWAY_ENABLED=true
MCP_GATEWAY_URL=http://localhost:8080

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8001

# Production Mode
PRODUCTION=false